@model IEnumerable<Trasalum.Models.Engagement>

@{
    ViewData["Title"] = "Index";
}

<h2>Events and Engagements</h2>

<p>
    <a asp-action="Create">Schedule Event</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.EngagementType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meetup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tech)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EngagementType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Meetup.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note.Detail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tech.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Update</a> |
                <a asp-action="Details" asp-route-id="@item.Id"> View Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
