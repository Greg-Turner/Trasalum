@model IEnumerable<Trasalum.Models.Staff>

@{
    ViewData["Title"] = "Index";
}

<h2>NSS Staff Members</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderBy( i => i.Name)) {
    @if (item.Name != "(Not Yet Assigned)")
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                @* May want to include Details if more properties are added to Staff*@
                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a>*@
                @* May want to change Delete to Deactivate and only reveal to Admin authenticated user*@
                @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
            </td>
        </tr>
    }
}
    </tbody>
</table>
